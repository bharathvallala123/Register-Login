        }
        .calendar th {
            background-color: #007BFF;
            color: white;
        }
        .orange-button {
            background-color: orange;
            color: white;
        }
        .orange-button:hover {
            background-color: darkorange;
            transform: scale(1.2);
        }
        .nav-buttons {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
        }
        .nav-buttons button {
            background-color: #007BFF;
            color: white;
            padding: 5px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
