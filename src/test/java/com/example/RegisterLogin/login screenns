    <title>Schedule Window</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f0f0f0;
        }
        .schedule-window {
            width: 300px;
            background-color: white;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            border-radius: 10px;
            overflow: hidden;
        }
        .schedule-header {
            padding: 20px;
            background-color: #007BFF;
            color: white;
            text-align: center;
        }
        .buttons {
            display: flex;
            flex-direction: column;
            align-items: stretch;
            padding: 10px;
            background-color: #f9f9f9;
        }
        .buttons button {
            margin: 5px 0;
            padding: 10px;
            border: none;
            border-radius: 5px;
            background-color: #007BFF;
            color: white;
            cursor: pointer;
            font-size: 16px;
            transition: transform 0.3s, background-color 0.3s;
        }
        .buttons button:hover {
            background-color: #0056b3;
            transform: scale(1.2);
        }
        .calendar {
            padding: 10px;
        }
        .calendar table {
            width: 100%;
            border-collapse: collapse;
        }
        .calendar th, .calendar td {
            border: 1px solid #ddd;
